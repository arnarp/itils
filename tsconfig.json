{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": ["src/**/*"]
}
